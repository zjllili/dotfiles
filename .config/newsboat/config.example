# @author nate zhou
# @since 2023,2024

color listnormal_unread  color9 default
color listfocus          white   color14
color listfocus_unread   white   color14
color info               default color14
color article            default default

datetime-format "%Y-%m-%d"

# movement
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
bind-key g home
bind-key G end
bind-key S save-all
bind-key ^p halfpageup
bind-key ^n halfpagedown
bind-key m mark-feed-read

save-path ~/doc/newsboat

browser "w3m %u"
#refresh-on-startup yes
reload-threads 100 # loading feeds in parallel

#use-proxy yes
#proxy localhost:PORT
