#!/usr/bin/sh
# @author nate zhou
# @since 2025

result="$(uptime -p | sed 's/up //; s/ week\(s\)\?/w/; s/ day\(s\)\?/d/; s/ hour\(s\)\?/h/; s/[0-9]* minute.*//; s/,//g; s/ $//; s/ / /;')"
icon=""

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(uptime -p | cut -d' ' -f2-)"
        ;;
    3) notify-send -u low -r 3301 -t 1100 "$icon $(basename $0)" "" && pkill -SIGRTMIN+9
        ;;
esac

# ` `(U+2009) is the Thin Space
[ -n "$result"  ] && echo "$icon" "$result" || echo "$icon <1h"
