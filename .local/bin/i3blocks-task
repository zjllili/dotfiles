#!/usr/bin/sh
# @author nate zhou
# @since 2025

result="$(task count +ACTIVE)"

icon="󰅎"
color="#ffffff"

[ "$result" -eq 0 ] || [ -z "$result" ] && color="#a8a196"

# ` `(U+2009) is the Thin Space
echo "$icon" "$result"
echo
echo "$color"

case $BLOCK_BUTTON in
    #2) footclient -T "Floating Term" -H taskwarrior-tui >/dev/null &
    #    ;;
    1) pkill -SIGRTMIN +15 i3blocks &
        ;;
esac
