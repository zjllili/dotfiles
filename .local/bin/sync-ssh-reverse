#!/usr/bin/env bash
# @author nate zhou
# @since 2024,2025
# sync everything to backup server with rsync and ssh

#echo;
echo "rsync -avh --delete-after --progress jerry@192.168.31.15:/home/jerry/{doc,mus,pic,vid,pkg} /home/jerry";

read -p "Do you want to continue? (y/n): " choice

if [ "$choice" = "y" ] || [ "$choice" = "Y" ]; then
	echo "Continuing ..."
	rsync -avh --delete-after --progress jerry@192.168.31.15:/home/jerry/{doc,mus,pic,vid,pkg} /home/jerry;
else
	echo "rsync is aborted."
	exit 0
fi
