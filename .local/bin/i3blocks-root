#!/usr/bin/sh
# @author nate zhou
# @since 2025

usage="$(command df / | awk 'NR==2 {print $5}')"

icon="ðŸ—"

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(df -h -x tmpfs -x efivarfs -x devtmpfs | awk 'NR=2 {print $6 "\t" $2 "\t" $3 "\t" $4}')"
        ;;
    2) footclient -T "Floating Term" ncdu --disable-delete --exclude /home --exclude /data />/dev/null &
        ;;
    3) notify-send -u low -r 3301 -t 1100 "$icon $(basename $0)" "ï€¡" && pkill -SIGRTMIN+13 i3blocks &
        ;;
esac

# `â€‰`(U+2009) is the Thin Space
echo "$icon"â€‰"$usage"
